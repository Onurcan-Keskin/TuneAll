<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light-Dark Theme -->
    <declare-styleable name="ds">
        <attr name="backgroundcolor" format="color"/>
        <attr name="card_background" format="color"/>
        <attr name="textcolor" format="color"/>
        <attr name="tintcolor" format="color"/>
        <attr name="buttoncolor" format="color"/>
        <attr name="buttontextcolor" format="color"/>
        <attr name="drawercolor" format="color"/>
        <attr name="icon_color" format="color"/>
        <attr name="colorPm" format="color"/>
        <attr name="colorImg" format="color"/>
    </declare-styleable>


    <declare-styleable name="TunerNavigationBlock">
        <attr name="nbIsActive" format="boolean" />
        <attr name="nbImage" format="integer" />
        <attr name="nbText" format="string" />
        <attr name="nbGroupText" format="string" />
    </declare-styleable>
    <declare-styleable name="PreferenceChoice">
        <attr name="title" />
        <attr name="summary" />
        <attr name="entries" />
        <attr name="entryValues" />
    </declare-styleable>
    <declare-styleable name="PreferenceNumber">
        <attr name="title" />
        <attr name="summary" />
        <attr name="numberStep" format="integer" />
        <attr name="numberMin" format="integer" />
        <attr name="numberMax" format="integer" />
        <attr name="labelFormat" format="string" />
    </declare-styleable>
    <declare-styleable name="PreferenceSwitch">
        <attr name="title" />
        <attr name="summary" />
    </declare-styleable>

    <declare-styleable name="Button">
        <attr name="text" format="string" />
        <attr name="variant" format="string" />
        <attr name="ghost" format="boolean" />
    </declare-styleable>
</resources>