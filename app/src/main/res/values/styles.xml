<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- Light Theme -->
    <style name="light_theme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPm">@color/colorPm</item>
        <item name="colorImg">@color/colorImg</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundcolor">#E8E8E8</item>
        <item name="card_background">@color/white</item>
        <item name="textcolor">#808080</item>
        <item name="tintcolor">#000000</item>
        <item name="buttontextcolor">@color/icon_blue</item>
        <item name="buttoncolor">@color/creme</item>
        <item name="icon_color">@color/icon_blue</item>
        <item name="drawercolor">@color/icon_darkblue</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <!-- Dark Mode Theme -->
    <style name="dark_theme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPm">@color/dcolorPrimaryDark</item>
        <item name="colorImg">@color/dcolorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundcolor">@color/colorPrimaryLight</item>
        <item name="card_background">#424242</item>
        <item name="textcolor">@color/white</item>
        <item name="tintcolor">@color/white</item>
        <item name="buttontextcolor">@color/white</item>
        <item name="buttoncolor">#424242</item>
        <item name="icon_color">@color/white</item>
        <item name="drawercolor">#212121</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="DialogBlurTheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@mipmap/icon</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/spacegrotesk_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_white_background</item>
    </style>

    <style name="AppTheme.TextViewStatus" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">20.0</item>
    </style>

    <style name="AppTheme.Navigation">
    </style>

    <style name="AppTheme.Navigation.NavigationBlock">
        <!--<item name="android:paddingLeft">25dp</item>-->
        <!--<item name="android:paddingRight">25dp</item>-->
    </style>

    <style name="AppTheme.Intro">
    </style>

    <style name="AppTheme.Intro.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/spacegrotesk_semibold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="AppTheme.Intro.Text">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/spacegrotesk_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="BaseBottomSheetDialog">
    </style>

    <style name="AppTheme.BottomSheet.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupMenuItem">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <!--<item name="android:layout_marginEnd">40dp</item>-->
        <item name="android:background">@drawable/rect_selector</item>
    </style>

    <style name="AppTheme.ButtonView">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AppTheme.Preference">
    </style>

    <style name="AppTheme.Preference.Root">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="AppTheme.Preference.ChoiceItem">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AppTheme.Preference.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/spacegrotesk_semibold</item>
    </style>

    <style name="AppTheme.Preference.Summary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/spacegrotesk_semibold</item>
    </style>

    <style name="AppTheme.Preference.Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/spacegrotesk_semibold</item>
    </style>

    <style name="AppTheme.Preference.SeekBar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:layout_marginRight">-10dp</item>
    </style>

</resources>
