<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Settings_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Settings"
            android:fontFamily="@font/spacegrotesk_medium"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            style="@style/AppTheme.BottomSheet.TextView"/>
        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:tint="@android:color/white"
            android:background="@drawable/round_selector"
            app:srcCompat="@drawable/ic_close"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
    <fragment
        android:id="@+id/fragment_tuner_view"
        android:name="com.onurcankeskin.looneytune.TuneInSettings.SettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>